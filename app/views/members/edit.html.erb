<h1>Welcome to Grave Gangs!</h1>
<h3>The only way to keep the party going after life ends</h2>
<br>

<h2>Edit your member account here!</h2>

<%= form_with model: @member do |f| %>
    <%= f.label :username %><br>
    <%= f.text_field :username %><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <%= f.label :full_name %><br>
    <%= f.text_field :full_name %><br>
    <%= f.label :birth_date %><br>
    <%= f.text_field :birth_date %><br>
    <%= f.label :death_date %><br>
    <%= f.text_field :death_date %><br>
    <br>
    <%= f.label :grave_gang_id %> (Select now, or later)<br>
    <%= f.collection_select(:grave_gang_id, GraveGang.all, :id, :name, prompt: true) %><br>
    <br>
    <%= f.label :theme %> (Select now, or later)<br>
    <%= f.collection_select(:theme_id, Theme.all, :id, :title, prompt: true) %><br>
    <br>
    <%= f.submit %>
<% end %>